
@{
    ViewData["Title"] = "Register";
}
@model MamaJanePizza.Controllers.LoginController
<h2>Register</h2>
<style>

    h2{
        color: black;
        text-align: center;
    }
</style>
<title>ELM - Login</title>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-sm-offset-2 col-sm-8 col-sm-offset-2 col-md-offset-3 col-md-6 col-md-offset-3 panel panel-primary">
                <div class="panel-body">
                    <form action='@Url.Action("UserReg","Login")' method="post">
                        <div class="form-group">
                            <label class="sr-only" for="firstname">First Name</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                <input type="text" class="form-control input-lg" id="firstname" name="firstname" placeholder="First Name" autofocus="autofocus">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="lastname">Last Name</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                <input type="text" class="form-control input-lg" id="lastname"user" name="lastname" placeholder="Last Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="user">Email address</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                <input type="text" class="form-control input-lg" id="user" name="user" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="password">Password</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-key"></i></div>
                                <input type="password" class="form-control input-lg" id="password" name="Password" placeholder="********">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="confirmpassword">Confirm Password</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-key"></i></div>
                                <input type="password" class="form-control input-lg" id="confirmpassword" name="confirmpassword" placeholder="********">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-login btn-lg btn-block">Create<i class="fa fa-sign-in"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>