@model MamaJanePizza.Models.CustomerModel
@{
    ViewData["Title"] = "Reset";
}

<h2>Reset Password</h2>

<style>
    h2 {
        color: black;
        text-align: center;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-sm-offset-2 col-sm-8 col-sm-offset-2 col-md-offset-3 col-md-6 col-md-offset-3 panel panel-primary">
                <div class="panel-body">
                    <form action='@Url.Action("PasswordReset","Login")' method="post">
                        <div class="form-group">
                            <label class="sr-only" for="email">Email address</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                <input type="text" class="form-control input-lg" id="email" name="email" placeholder=@GlobalCustomerListModel.CurrentUser.Email autofocus="autofocus" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="password">Password</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-key"></i></div>
                                <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="password">Comfirm Password</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-key"></i></div>
                                <input type="password" class="form-control input-lg" id="comfirmpassword" name="comfirmpassword" placeholder="Comfirm Password">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-login btn-lg btn-block">Submit<i class="fa fa-sign-in"></i></button>
                        @if (ViewBag.Message != null)
                        {
                            <p style="color:red;font-size:20px;align-content:center;text-align:center;"><b> @ViewBag.Message </b></p>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>